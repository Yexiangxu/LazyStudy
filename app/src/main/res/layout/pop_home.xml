<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="25dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBgSoundEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景音效"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBgSoundEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@+id/tvBgSoundEffect"
            app:layout_constraintStart_toEndOf="@+id/tvBgSoundEffect"
            app:layout_constraintTop_toTopOf="@+id/tvBgSoundEffect" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGameSoundEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="游戏音效"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/tvBgSoundEffect"
            app:layout_constraintTop_toBottomOf="@+id/tvBgSoundEffect" />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchGameSoundEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintStart_toStartOf="@+id/switchBgSoundEffect"
            app:layout_constraintBottom_toBottomOf="@+id/tvGameSoundEffect"
            app:layout_constraintTop_toTopOf="@+id/tvGameSoundEffect" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>