<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="#3A71FE"
                android:startColor="#3A71FE"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="@dimen/dp_10"
                android:bottomRightRadius="@dimen/dp_10" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <scale
            android:drawable="@drawable/shape_secondprogressbar_bg"
            android:scaleWidth="0%"
            android:scaleHeight="100%"
            android:scaleGravity="bottom" />
    </item>
    <item android:id="@android:id/progress">
        <scale
            android:drawable="@drawable/shape_progress_bar_bg"
            android:scaleWidth="0%"
            android:scaleHeight="100%"
            android:scaleGravity="bottom" />
    </item>

</layer-list><!--    <?xml version="1.0" encoding="utf-8"?>-->
