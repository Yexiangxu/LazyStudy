<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_puppet1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Foreground:selectableItemBackground"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_puppet2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="Background:selectableItemBackground"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/function_shape_bg_click"
                android:clickable="true"
                android:gravity="center"
                android:text="Background:custom ripple bg"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_margin="15dp"
                android:background="@android:color/white"
                android:text="stateListAnimator"
                android:textColor="@android:color/black"
                android:stateListAnimator="@drawable/function_anim_view_state_change"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
