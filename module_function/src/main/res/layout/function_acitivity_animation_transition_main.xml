<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_view_gone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="文字消失显示(AutoTransition)" />

        <Button
            android:id="@+id/btn_view_gone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="文字移动（ChangeBounds）" />

        <Button
            android:id="@+id/btn_view_gone3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="文字滑动显示消失（Slide）" />

        <Button
            android:id="@+id/btn_view_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="文字大小显示消失（Scale）" />

        <Button
            android:id="@+id/btn_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="图片大小变化（Scale）" />

        <Button
            android:id="@+id/btn_colorchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="颜色切换" />

        <Button
            android:id="@+id/btn_textchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:text="文字切换" />


    </LinearLayout>
</ScrollView>
